     ncsAvmEntUpgradeTable OBJECT-TYPE
         SYNTAX      SEQUENCE OF NcsAvmEntUpgradeTableEntry
         MAX-ACCESS  not-accessible
         STATUS      current
         DESCRIPTION
             "The table is used for configuration of the
        NCS HPI entity containment hierarchy for the
        current deployment."
              
         ::= { ncsAvmTables 4 }

     ncsAvmEntUpgradeTableEntry OBJECT-TYPE
         SYNTAX      NcsAvmEntUpgradeTableEntry
         MAX-ACCESS  not-accessible
         STATUS      current
         DESCRIPTION
             "An entry in this table represents an
        entity in the system."
          AUGMENTS       { ncsAvmEntDeployTableEntry }   
         ::= {  ncsAvmEntUpgradeTable 1 }

     NcsAvmEntUpgradeTableEntry ::= SEQUENCE {
         ncsAvmEntHelperPayload              OCTET STRING,
         ncsAvmEntUpgradeType                INTEGER,
         ncsAvmEntAdminOper                  INTEGER 
     }                                  
     ncsAvmEntHelperPayload OBJECT-TYPE   
         SYNTAX      OCTET STRING(SIZE(0..255))
         MAX-ACCESS  read-create
         STATUS      current
         DESCRIPTION
             "Helper blade is used for upgrading IPMC, during integrated upgrade.
              Helper blade parameter should be set to some valid blade entity path."
         ::= { ncsAvmEntUpgradeTableEntry 1 }
 
     ncsAvmEntUpgradeType OBJECT-TYPE
         SYNTAX      INTEGER { sw-bios(0), integ(1), ipmc(2) }
         MAX-ACCESS  read-create
         STATUS      current
         DESCRIPTION
             "This object is to specify the upgrade type. If it is set to SW-BIOS,
         it upgrades only BIOS and software. If it is set to INTEG, it does the 
	 Integrated upgrade(BIOS, IPMC & Software). If it is set to IPMC, it does 
         only the IPMC upgrade."
      
         DEFVAL {sw-bios}
         ::= { ncsAvmEntUpgradeTableEntry 2 }
     
     ncsAvmEntAdminOper OBJECT-TYPE
         SYNTAX      INTEGER { commit(0), upgrade(1) }
         MAX-ACCESS  read-create
         STATUS      current
         DESCRIPTION
             "This object is to trigger the commit or upgrade operations "             

         DEFVAL {commit}
         ::= { ncsAvmEntUpgradeTableEntry 3 }

-- *****************************************************************************
--   Notifications : This section enumerates the Traps that the AMF implementation 
--                   is expected to support.
--   Traps         : Actual Traps specified in this MIB
-- ******************************************************************************
ncsAvmTraps       OBJECT IDENTIFIER ::= { ncsAvmNotifications 1 }


-- ***************************************************************************
--   AVM Traps 
-- ***************************************************************************
ncsAvmUpgradeSuccess NOTIFICATION-TYPE
        OBJECTS {
                   ncsAvmEntDHCPConfCurrActiveLabel
                }
        STATUS             current
        DESCRIPTION
           "Software Upgrade Success for a node identified using entity path."
        ::= { ncsAvmTraps 1 }

ncsAvmUpgradeFailure NOTIFICATION-TYPE
        OBJECTS {
                  ncsAvmEntDHCPConfCurrActiveLabel,
                  ncsAvmBootProgressStatus
                }
        STATUS             obsolete 
        DESCRIPTION
           "This trap notifies the system administrator that the upgrade for the
            node is failed. Along with this trap entity path of the node on which 
            upgrade is in progress and the upgrade failure reason is sent."
       ::= { ncsAvmTraps 2 }

ncsAvmBootProgress NOTIFICATION-TYPE
        OBJECTS {
                  ncsAvmBootProgressStatus
                }
        STATUS             current
        DESCRIPTION
           "This trap notifies the system administrator about the boot progress.
            Along with this trap entity path of the node on which 
            upgrade is in progress and the boot progress status is sent."
       ::= {   ncsAvmTraps 3   }

ncsAvmBootFailure NOTIFICATION-TYPE
       OBJECTS {
                  ncsAvmEntNodeName
               }
       STATUS             current
       DESCRIPTION
           "This trap notifies the system administrator about the boot failure.
            Along with this trap name of the node on wbich 
            boot failure happened  is sent."
       ::= { ncsAvmTraps 4 }    

ncsAvmSwitch NOTIFICATION-TYPE
       OBJECTS {
                  ncsAvmSwitchStatus,
                  ncsAvmSwitchTime
               }
       STATUS     current
       DESCRIPTION
          "This trap notifies the systen administrator about the switchover status
           irrespective of the source of the Switchover"
      ::=  {   ncsAvmTraps 5 }
  
ncsAvmCurrActiveLabelChange NOTIFICATION-TYPE
      OBJECTS {
                  ncsAvmEntDHCPConfCurrActiveLabel
              }
      STATUS     current
      DESCRIPTION
         "This trap notifies the system administrator about the change of current active label"
      ::= { ncsAvmTraps 6 }      

ncsAvmSwFwUpgradeFailure NOTIFICATION-TYPE
      OBJECTS { 
                  ncsAvmEntDHCPConfCurrActiveLabel,
                  ncsAvmUpgradeModule, 
                  ncsAvmUpgradeErrorType
              }
      STATUS     current
      DESCRIPTION
         "This trap notifies the failure of the software firmware upgrade. 
          It also contains the module name and the error type." 
      ::= { ncsAvmTraps 7 }

ncsAvmUpgradeProgress   NOTIFICATION-TYPE
       OBJECTS {
                  ncsAvmEntDHCPConfCurrActiveLabel,
                  ncsAvmUpgradeModule,
                  ncsAvmUpgradeProgressEvent
               }
       STATUS     current 
       DESCRIPTION  
           "This trap notifies the progress of the upograde, while the upgrade
            is under progress. It carries the module name and the type of event
            which is under upgrade progress."
      ::= { ncsAvmTraps 8 }     

ncsAvmTrapSupport       OBJECT IDENTIFIER ::= { ncsAvmTrapControl 1 } 

ncsAvmUpgradeErrorType  OBJECT-TYPE
         SYNTAX      INTEGER {
                                gen-error(1),
                                time-out(2),
                                fcu-query-not-supported(3),
                                fcu-query-invalid-value(4),
                                fcu-query-device-not-found(5),
                                fcu-write-not-supported(6),
                                fcu-write-invalid-value(7),
                                fcu-write-device-not-found(8),
                                fcu-write-failure(9),
                                fcu-verify-failure(10),
                                fund-fcu-busy(11),
                                fund-tftp-error(12),
                                unknown-rtm-type(13),
                                unknown-error(14)
                             }
         MAX-ACCESS  accessible-for-notify
         STATUS      current
         DESCRIPTION
             "upgrade error type will be sent along with the
              ncsAvmUpgradeFailure trap while upgrade is in progress"
         ::= { ncsAvmTrapSupport 1 }

ncsAvmUpgradeModule   OBJECT-TYPE
       SYNTAX      INTEGER {
                               noModule(1),
                               ipmc-payload(2),
                               ipmc-payload-bld(3),
                               ipmc-payload-rtm(4), 
                               sw-bios(5),
                               allModule(6)
                            }
       MAX-ACCESS  accessible-for-notify 
       STATUS      current
       DESCRIPTION
            "This object shows, which module is under upgrade. It 
             is sent with the ncsAvmUpgradeFailure trap and 
             ncsAvmUpgradeProgress  trap"
       ::= { ncsAvmTrapSupport 2 }

ncsAvmUpgradeProgressEvent OBJECT-TYPE
       SYNTAX      INTEGER {
                              upgradeSuccess(1),
                              sameVersion(2),
                              rollbackTriggered(3),
                              rollbackSuccess(4)
                           }
       MAX-ACCESS  accessible-for-notify 
       STATUS      current
       DESCRIPTION 
            "This object shows the upgrade progress event while 
             upgrading the payload blade. It is sent along with the 
             ncsAvmUpgradeProgress trap."
       ::= { ncsAvmTrapSupport 3 }           

END
