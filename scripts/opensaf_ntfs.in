source "@sysconfdir@/@PACKAGE_NAME@/script.conf"

command=opensaf_ntfd
ntfsd=$LIBPATH/$command
pidfile=$PIDPATH/$command.pid
conf=${SYSCONFDIR}/ntf.conf

test -r $conf || exit 1
source $conf

test -x $ntfsd || exit 1

case $1 in
    start)
        $NTFTOOL $ntfsd > "$NCS_STDOUTS_PATH/$command" 2>&1 &
        ;;
    clean)
        if test -r $pidfile; then
            PID=`cat $pidfile`
            if [ "$NTFTOOL" == "" ]; then
                kill -KILL $PID
            else
                kill -TERM $PID
            fi
            rm -f $pidfile
        fi
        ;;
    dump)
        # Dump internal data structures to console
        kill -USR2 `cat $pidfile` 
        ;;
    *)
        echo "Usage: $0 {start|clean|dump}"
        exit 1
esac

exit 0
