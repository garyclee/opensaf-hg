#
# Role Distribution Entity AMF cleanup script
#

#PIDPATH=/var/run
PIDFILE=fms.pid
DAEMON=ncs_fms
DESC="Role Distribution Entity Daemon"
#BINPATH=/opt/opensaf/controller/bin


#FMS_HA_COMP_NAMED_PIPE=/tmp/fms_ha_comp_named_pipe

#check if the PIDFILE exists and get pid
if test -f "$PIDPATH/$PIDFILE"
then
   l_pid=`cat "$PIDPATH/$PIDFILE"`
fi

#stop fms daemon
if [ "$l_pid" ]
   then 
      echo "Stopping $DESC: $BINPATH/$DAEMON";
       `kill -9 $l_pid`
      echo "fms_lfm daemon is stopped sucessfully! $l_pid"
   else 
      echo "fms_lfm  deamon is not running"
fi

#remove the FMS PID file
if test -f "$PIDPATH/$PIDFILE"
then
   rm -f "$PIDPATH/$PIDFILE"
fi

#Delete FMS_HA_COMP_NAMED_PIPE
if test -p $FMS_HA_COMP_NAMED_PIPE
then
   rm -f $FMS_HA_COMP_NAMED_PIPE
fi

exit 0

