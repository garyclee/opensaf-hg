echo "`date`: $0 $*"

source "@sysconfdir@/@PACKAGE_NAME@/script.conf"

CMD=$1

NAME=opensaf_saflogd
CONFFILE=${SYSCONFDIR}/saflog.conf

# Start generic part
BIN=${LIBPATH}/${NAME}
LOGFILE=${NCS_STDOUTS_PATH}/${NAME}.log
PIDFILE=${PIDPATH}/${NAME}.pid

test -f $CONFFILE && source $CONFFILE
test -f $PIDFILE && PID=`cat $PIDFILE`

case "$CMD" in
    instantiate)
        if [ ! -x $BIN ]; then
            logger -s -t $0 "ERROR: File $BIN does not exist or is not executable"
            exit 1
        fi
        $TOOL $BIN >> $LOGFILE 2>&1 &
        ;;
    cleanup)
        if test -r $PIDFILE; then
            if [ "$TOOL" == "" ]; then
                kill -KILL $PID
            else
                kill -TERM $PID
            fi
            rm -f $PIDFILE
        fi
        ;;
    *)
        echo "Usage: $0 {instantiate|cleanup}"
        exit 1
esac

exit 0
