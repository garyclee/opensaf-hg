source "@sysconfdir@/@PACKAGE_NAME@/script.conf"

BIN=${LIBPATH}/opensaf_saflogd
LOGFILE=${NCS_STDOUTS_PATH}/opensaf_saflogd.log
CONFFILE=${SYSCONFDIR}/saflog.conf
PIDFILE=${PIDPATH}/opensaf_saflogd.pid

test -x $BIN || exit 1
test -f $CONFFILE && source $CONFFILE
test -f $PIDFILE && PID=`cat $PIDFILE`

mkdir -p $LOGSV_ROOT_DIRECTORY

echo "`date`: $0 $*"

case $1 in
    instantiate)
        $LOGTOOL $BIN >> $LOGFILE 2>&1 &
        ;;
    cleanup)
        if [ "$LOGTOOL" == "" ]; then
            kill -KILL $PID
        else
            kill -TERM $PID
        fi
        rm -f "$PIDFILE"
        ;;
    dump)
        # Dump internal data structures to console
        kill -USR2 $PID
        ;;
    *)
        echo "Usage: $0 {instantiate|cleanup|dump}"
        exit 1
esac

exit 0
