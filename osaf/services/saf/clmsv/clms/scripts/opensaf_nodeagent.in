echo "`date`: $0 $*"

CMD=$1

NAME=clmna

# Start generic part
BIN=${LIBPATH}/opensaf_${NAME}

start()
{

    if [ ! -x $BIN ]; then
        logger -s -t $0 "ERROR: File $BIN does not exist or is not executable"
        exit 1
    fi

    $BIN &
   
    if [ $? -ne 0 ]; then
        logger -s -t $0 "ERROR: Cannot start $BIN."
        exit 1
    fi	
}

case "$CMD" in
    start)
        start
        ;;
    stop)
        ;;
    *)
        echo "Usage: $0 {start}"
        exit 1
esac

exit 0
