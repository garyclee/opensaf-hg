echo "`date`: $0 $*"

source "@sysconfdir@/@PACKAGE_NAME@/script.conf"

CMD=$1

NAME=amfmon

# Start generic part
SERVICE=`echo $NAME | tr '[:lower:]' '[:upper:]'`
BIN=${LIBPATH}/opensaf_${NAME}
PIDFILE=${PKGPIDDIR}/opensaf_${NAME}.pid

test -f $CONFFILE && source $CONFFILE
test -f $PIDFILE && PID=`cat $PIDFILE`

instantiate()
{
    # If the process exist it has been started earlier by NID, send signal to it.
    # If the process does not exist, AMF wants it (re)started.
    if test -f $PIDFILE; then
        kill -USR1 $PID
    else
		 $BIN &
    fi
}

cleanup()
{
    if test -f $PIDFILE; then
        kill -TERM $PID
    fi

    rm -f $PIDFILE
}

case "$CMD" in
    instantiate)
        instantiate
        ;;
    cleanup)
        cleanup
        ;;
    *)
        echo "Usage: $0 {instantiate|cleanup}"
        exit 1
esac

exit 0

