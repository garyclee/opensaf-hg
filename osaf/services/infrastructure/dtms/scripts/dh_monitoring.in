prog="osafdtmd"
DBGFILE=$pkglogdir/dtm.log
ECHO="echo -e"
SHUTDOWN="/sbin/shutdown"

while [ 1 ]; do
	pidval=`cat /var/run/$prog.pid`;
	if [ "$pidval" = "" ]; then
		$ECHO "MyGOD DH process down... Reboot !!" >> $DBGFILE
		$SHUTDOWN -r now
	else
		$ECHO "Hurrey DH process up... Go On !!" >> $DBGFILE
	fi

	sleep 5
done


